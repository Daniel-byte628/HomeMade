<div class="block mx-auto my-12 w-2/3 p-8 bg-white border border-gray-200 rounded-lg shadow-lg text-gray-800">
    <h1 class="text-3xl font-bold text-center">Registrar Profesional</h1>

    <form action="" method="POST" class="mt-4">

        <input type="text" name="name" placeholder="Nombre"
            class="bg-gray-200 border border-gray-300 w-full text-lg placeholder-gray-600 p-2 my-2 focus:bg-white"
            required>

        <input type="text" name="apellido" placeholder="Apellido"
            class="bg-gray-200 border border-gray-300 w-full text-lg placeholder-gray-600 p-2 my-2 focus:bg-white"
            required>

        <input type="text" name="usuario" placeholder="Usuario"
            class="bg-gray-200 border border-gray-300 w-full text-lg placeholder-gray-600 p-2 my-2 focus:bg-white"
            required>

        <input type="password" name="password" placeholder="Password"
            class="bg-gray-200 border border-gray-300 w-full text-lg placeholder-gray-600 p-2 my-2 focus:bg-white"
            required>

        <input type="email" name="correo" placeholder="Correo"
            class="bg-gray-200 border border-gray-300 w-full text-lg placeholder-gray-600 p-2 my-2 focus:bg-white"
            required>

        <input type="text" name="direccion" placeholder="Direccion"
            class="bg-gray-200 border border-gray-300 w-full text-lg placeholder-gray-600 p-2 my-2 focus:bg-white"
            required>

        <select name="categoria" class="bg-gray-200 border border-gray-300 w-full text-lg p-2 my-2 focus:bg-white"
            required>
            <option value="" disabled selected>Selecciona una Categoría</option>
            <option value="Tecnología">Tecnología</option>
            <option value="Construcción">Construcción</option>
            <option value="Inmobiliaria">Inmobiliaria</option>
        </select>


        <input type="text" name="empresa" placeholder="Empresa(opcional)"
            class="bg-gray-200 border border-gray-300 w-full text-lg placeholder-gray-600 p-2 my-2 focus:bg-white">

        <button type="submit"
            class="rounded-md bg-red-500 hover:bg-red-400 w-full text-lg text-white font-semibold py-2 my-3">Registrarse</button>

        {{#if error}}
        <p class="text-red-500 font-bold text-lg my-3">* {{error}}</p>
        {{/if}}
    </form>

    <a href="/register"
        class="rounded-md bg-red-500 hover:bg-red-400 w-full text-lg text-white font-semibold py-2 my-3 text-center inline-block">
        Usuario
    </a>

</div>